<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#002855"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPER INFO"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <ImageView
        android:id="@+id/devImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/profile"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:padding="2dp" />

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <!-- Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: S.Tharshan"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- Student No -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student no: 2020T00912"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <!-- Statement -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="This app was built to enhance student communication and keep everyone informed with the latest updates from the Faculty of Technology."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAlignment="center" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <!-- Version -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release version: 1.0"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/btnExit"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Exit"
        android:layout_marginTop="32dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="#000000"/>
</LinearLayout>
